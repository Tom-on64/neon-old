(* Current Neon Syntax *)

program = statement*; (* Root Node*)

(* Nodes *)
statement = return | declaration;

declaration = type identifier "=" expression;
return = "return" expr;

expression = term | binExpressions;
term = intLit | identifier;
binExpression = (expression "*" expression) | (expression "+" expression);

(* IToken *)
identifier = [A-Za-z_][A-Za-z0-9_]*;
type = ?type?;
intLit = ?LInt?;
